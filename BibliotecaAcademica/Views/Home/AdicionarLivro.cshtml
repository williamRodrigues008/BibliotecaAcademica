@{
    var erro = ViewBag.Erro;
}
<link href="~/css/adicionar.css" rel="stylesheet" />
<script src="~/js/adicionar.js" type="text/javascript"></script>

<div id="corpo">
    <form id="formularioDeCadastro" asp-controller="Livros" asp-area="AdicionarLivro" enctype="multipart/form-data">
        <div style="display: flex; flex-direction: row; justify-content:space-around">
            <div class="divImagemDaCapa">
                <div class="imagemDeCapa capa"><h5>Escolha a capa do livro</h5></div>
                <br />
                <input type="file" id="enderecoImagem" name="capa" class="selecionarImagem" style="width: 15vw;" />
            </div>
            <div class="divArquivoLivro">
                <div class="imagemDeCapa"><h5>Escolha o arquivo/livro</h5></div>
                <br />
                <input required type="file" id="enderecoImagem" name="livro" class="selecionarImagem" style="width: 20vw;" />
            </div>
        </div>
        <div id="divDeCadastro">
            <div class="informacoesDoNovoLivro">
                <label for="titulo">Titulo</label>
                <input required class="inputTitulo" type="text" name="titulo" />

                <label for="autor">Autor</label>
                <input required class="inputAutor" type="text" name="autor" />

                <label for="genero">Genero</label>
                <select required name="genero">
                    <option>Romance</option>
                    <option>Aventura</option>
                    <option>Comédia</option>
                    <option>Científico</option>
                    <option>Terror</option>
                    <option>Bíblico</option>
                </select>

                <label for="lancamento">Lançamento</label>
                <input required class="inputLancamento" type="date" name="lancamento" />
            </div>
        </div>

        <hr />

        <div style="display: flex; justify-content: center;">
            <button type="submit" class="btnLerLivro" style="border:none; background-color:#03f600; width:80%; height:5vh; color:white; border-radius:5px;">Salvar Livro</button>
            <label>@erro</label>
        </div>

    </form>
</div>